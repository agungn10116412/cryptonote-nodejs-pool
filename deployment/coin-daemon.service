[Unit]
Description=Coin Daemon
After=network.target

[Service]
Type=forking
GuessMainPID=no
Restart=always

# Change this line to set the location of your coin daemon
ExecStart=D:\Monero GUI Wallet\monerod --rpc-bind-ip 127.0.0.1 --rpc-bind-port=18081 --confirm-external-bind --detach

# Change this line to the user that will run your coin daemon
User=pool

[Install]
WantedBy=multi-user.target
